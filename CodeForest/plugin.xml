<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="4.0"?>
<plugin>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jtool.codeforest.handlers.NewAction"
            commandId="org.jtool.codeforest.commands.new">
      </handler>
      <handler
            class="org.jtool.codeforest.handlers.OpenAction"
            commandId="org.jtool.codeforest.commands.open">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="org.jtool.codeforest.menus.menu"
               label="CodeForest"
               mnemonic="M">
            <command
                  commandId="org.jtool.codeforest.commands.new"
                  id="org.jtool.codeforest.menus.new"
                  label="NEW"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.jtool.codeforest.toolbars.new">
            <command
                  commandId="org.jtool.codeforest.commands.new"
                  icon="icons/codeforest.png"
                  id="org.jtool.codeforest.toolbars.new"
                  tooltip="Activates a new CodeForest view">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <separator
               name="org.jtool.codeforest.separator1"
               visible="true">
         </separator>
         <command
               commandId="org.jtool.codeforest.commands.open"
               icon="icons/codeforest.png"
               label="Open CodeForest"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <separator
               name="org.jtoo.codeforest.separator2"
               visible="true">
         </separator>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.jtool.codeforest.commands.category"
            name="CodeForest Category">
      </category>
      <command
            categoryId="org.jtool.codeforest.commands.category"
            id="org.jtool.codeforest.commands.new"
            name="CodeForest New">
      </command>
      <command
            categoryId="org.jtool.codeforest.commands.category"
            id="org.jtool.codeforest.commands.open"
            name="CodeForest Open">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.jtool.codeforest.PreferencePage"
            id="org.jtool.codeforest.preferences.SamplePreferencePage"
            name="CodeForest">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.jtool.codeforest.PreferenceInitializer">
      </initializer>
   </extension>
</plugin>
